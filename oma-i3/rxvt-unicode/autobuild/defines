PKGNAME="rxvt-unicode"
PKGSEC=utils
PKGDES="A customizable terminal emulator forked from rxvt"
PKGDEP="glibc"
BUILDDEP="x11-lib perl startup-notification"
AUTOTOOLS_AFTER+="\
	--enable-256-color \
	--enable-combining \
	--enable-fading \
	--enable-font-styles \
	--enable-iso14755 \
	--enable-keepscrolling \
	--enable-lastlog \
	--enable-mousewheel \
	--enable-next-scroll \
	--enable-perl \
	--enable-pointer-black \
	--enable-rxvt-scroll \
	--enable-selectionscrolling \
	--enable-slipwheeling \
	--disable-smart-resize \
	--enable-startup-notification \
	--enable-transparency \
	--enable-unicode3
	--enable-utmp \
	--enable-wtmp \
	--enable-xft \
	--enable-xim \
	--enable-xterm-scroll \
	--disable-pixbuf \
	--disable-frills"
